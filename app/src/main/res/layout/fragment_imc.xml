<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/skbWeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="150"
        android:progress="75"
        app:layout_constraintBottom_toBottomOf="@+id/tvweight"
        app:layout_constraintEnd_toStartOf="@+id/tvWeightValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvweight"
        app:layout_constraintTop_toTopOf="@+id/tvweight" />

    <TextView
        android:id="@+id/tvWeightValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:text="75/150"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/skbWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/skbWeight"
        app:layout_constraintTop_toTopOf="@+id/skbWeight"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/tvweight"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:text="Peso"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/skbWeight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <SeekBar
        android:id="@+id/skbHeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:max="200"
        android:min="100"
        android:progress="150"
        app:layout_constraintBottom_toBottomOf="@+id/tvHeight"
        app:layout_constraintEnd_toStartOf="@+id/tvHeightValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvHeight"
        app:layout_constraintTop_toTopOf="@+id/tvHeight"
        app:layout_constraintVertical_bias="0.642" />

    <TextView
        android:id="@+id/tvHeightValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:text="150/200"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/skbHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/skbHeight"
        app:layout_constraintTop_toTopOf="@+id/skbHeight" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:text="Altura"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/skbHeight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/tvIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:text="33.33"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.367" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.402"
        app:srcCompat="@drawable/imc" />

</androidx.constraintlayout.widget.ConstraintLayout>